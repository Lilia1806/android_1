<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/firstFragment">

    <fragment
        android:id="@+id/detailFragment"
        android:name="com.example.android_1.ui.fragments.detail.DetailFirstFragment"
        android:label="fragment_detail"
        tools:layout="@layout/fragment_detail" >
        <argument
            android:name="cat"
            app:argType="string" />
        <argument
            android:name="name"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/firstFragment"
        android:name="com.example.android_1.ui.fragments.FirstFragment"
        android:label="fragment_first"
        tools:layout="@layout/fragment_first">
        <action
            android:id="@+id/action_firstFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
    </fragment>
    <fragment
        android:id="@+id/secondFragment2"
        android:name="com.example.android_1.ui.fragments.SecondFragment"
        android:label="fragment_second"
        tools:layout="@layout/fragment_second" >
        <action
            android:id="@+id/action_secondFragment2_to_detailSecondFragment"
            app:destination="@id/detailSecondFragment" />
    </fragment>
    <fragment
        android:id="@+id/thirdFragment"
        android:name="com.example.android_1.ui.fragments.ThirdFragment"
        android:label="fragment_thirt"
        tools:layout="@layout/fragment_thirt" >
        <action
            android:id="@+id/action_thirdFragment_to_detailThirdFragment"
            app:destination="@id/detailThirdFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailSecondFragment"
        android:name="com.example.android_1.ui.fragments.detail.DetailSecondFragment"
        android:label="fragment_detail_second"
        tools:layout="@layout/fragment_detail_second" />
    <fragment
        android:id="@+id/detailThirdFragment"
        android:name="com.example.android_1.ui.fragments.detail.DetailThirdFragment"
        android:label="fragment_detail_third"
        tools:layout="@layout/fragment_detail_third" />

</navigation>